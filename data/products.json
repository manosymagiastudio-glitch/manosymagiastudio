      function closeModal(){\r\n        modal.setAttribute('aria-hidden','true');\r\n        modal.style.display='none';\r\n        document.body.style.overflow='';\r\n        try{ ui.reset(); }catch(e){}\r\n      }\r\n      modal.addEventListener('click', (e)=>{ if(e.target===modal) closeModal(); });\r\n      btnClose.addEventListener('click', closeModal);\r\n      document.addEventListener('keydown', (e)=>{ if(e.key==='Escape') closeModal(); });\r\n\r\n      // Redirecci√≥n a Tienda\r\n      function goShop(){\r\n        const user = auth.currentUser;\r\n        const email = user?.email ? encodeURIComponent(user.email) : \"\";\r\n        const url = email ? `${TIENDA_URL}?utm_source=web&utm_medium=auth&utm_campaign=tienda&user=${email}` : TIENDA_URL;\r\n        window.location.href = url;\r\n      }\r\n      function openShop(){ if (auth.currentUser) goShop(); else openModal(); }\r\n      window.__openShop = openShop;\r\n\r\n      // üîî Avisamos que __openShop ya est√° listo (por si alguien hizo click antes)\r\n      try { window.dispatchEvent(new Event('mm:openShopReady')); } catch(e){}\r\n\r\n      // UI ‚ÄúHola, ‚Ä¶‚Äù y logout\r\n      const pill = document.getElementById('user-pill');\r\n      const logoutLink = document.getElementById('logout-link');\r\n      auth.onAuthStateChanged((user)=>{\r\n        if(user){\r\n          pill.style.display='inline-block';\r\n          pill.textContent = user.displayName ? `Hola, ${user.displayName}` : user.email;\r\n        }else{\r\n          pill.style.display='none';\r\n          pill.textContent = '';\r\n        }\r\n      });\r\n      logoutLink.addEventListener('click', function(e){\r\n        e.preventDefault();\r\n        if(auth.currentUser){ auth.signOut(); alert(\"Sesi√≥n cerrada.\"); }\r\n        else { alert(\"No hay sesi√≥n iniciada.\"); }\r\n      });\r\n    })();\r\n  });\r\n  </script>\r\n\r\n  <!-- =============== MODAL AUTH (FirebaseUI) ================= -->\r\n  <div id=\"authModal\" aria-hidden=\